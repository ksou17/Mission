@{
    ViewData["Title"] = "Calculator";
}

@model CalculatorModel

<h3>Grade Calculator</h3>
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="Assignment" /><br />
    <label>Group Projects:</label>
    <input id="projects" asp-for="Group"/><br />
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="Quiz"/><br />
    <label>Exams:</label>
    <input id="exam" asp-for="Test" /><br />
    <label>INTEX:</label>
    <input id="intex" asp-for="Final"/><br />
    <input id="plzwork" type="submit" value="Calculate Score" />

    <div asp-validation-summary="All"></div>
</form>

<script src="Mission/wwwroot/js/JavaScript.js"></script>
